<div class="d-sm-flex align-items-center justify-content-between mb-4">
	<h1 class="h3 mb-0 text-gray-800">Event Show</h1>
	<%= link_to admin_events_path, class: "d-none d-sm-inline-block btn btn-secondary shadow-sm" do %>
		<i class="fas fa-angle-left"></i> Back to events
	<% end %>
</div>
<div class="row">
	<!-- Area Chart -->
	<div class="col-xl-8 col-lg-7 mx-auto">
		<div class="card shadow mb-4">
			<!-- Card Header - Dropdown -->
			<!-- Card Body -->
			<div class="card-body">
				<%= image_tag(@admin_event.photo, class: "img-fluid", height: "100%") %>
				<p class="mt-3">
					<strong>Name:</strong>
					<%= @admin_event.name %>
				</p>
				<p>
					<strong>Description:</strong>
					<%= @admin_event.description %>
				</p>
				<p>
					<strong>Start date:</strong>
					<%= @admin_event.start_date %>
				</p>
				<p>
					<strong>Start time:</strong>
					<%= @admin_event.start_time.in_time_zone %>
				</p>
				<p>
					<strong>Duration:</strong>
					<%= @admin_event.duration %> <span class="badge badge-success"><%= @admin_event.admin_category.name %></span>
				</p>
				<br>
				<h3>Tickets:</h3>
				<% @admin_tickets.each do |ticket| %>
					<p><strong>Ticket type:</strong> <%= ticket.ticket_type %> <br>
						<span><strong>Price:</strong> <%= ticket.price %></span> <br>
						<span><strong>No of seats:</strong> <%= ticket.vip_seats %><%= ticket.regular_seats %></span></p>
				<% end %>
				<div class="">
					<%= link_to "Edit this event", edit_admin_event_path(@admin_event), class: "btn btn-primary" %>
					<%= link_to "Destroy", @admin_event, class: "btn btn-danger", data: {turbo_method: :delete, turbo_confirm: "Are you sure you want to destroy #{@admin_event.name}."} %>
				</div>
			</div>
		</div>
	</div>
</div>
