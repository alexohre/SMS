<style>
	.magi{
		margin-top: 6rem !important;
	}
</style>
<main class="container magi">
	<div class="p-4 p-md-5 mb-4 border rounded text-body-emphasis bg-body-secondary">
		<div class="col-lg-6 px-0">
			<h1 class="display-4 fst-italic">Upcoming Events</h1>
		</div>
	</div>
	<div class="row mb-2">
		<% @upcoming_events.each do |event| %>
			<div class="col-md-6">
				<div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
					<div class="col p-4 d-flex flex-column position-static">
						<strong class="d-inline-block mb-2 text-primary-emphasis"><span class="badge badge-success"><%= event.category.name %></span></strong>
						<%= link_to event do %>
							<h3 class="mb-0"><%= truncate(event.name, length: 25) %></h3>
						<% end %>
						<div class="mb-1 text-body-secondary"><%= event.start_date.strftime('%b %d, %Y') %></div>
						<p class="card-text mb-auto"><%= truncate(event.description, length: 100) %></p>
					</div>
					<div class="col-auto d-none d-lg-block">
						<%= link_to event do %>
							<%= image_tag(event.photo, width: "250", height: "200", class: "py-auto" )%>
						<% end %>
					</div>
				</div>
			</div>
		<% end %>
	</div>
</main>
